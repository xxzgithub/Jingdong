<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="15dp"
    >

    <bwie.com.jingdong.widget.CustomLoginTitleBar
        android:id="@+id/title_bar_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleColor="#000"
        app:titleContext="手机快速注册"
        app:titleImgLeft="@mipmap/ahs"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入"
            />

        <TextView
            android:id="@+id/tv_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17090408165"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的验证码"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/mstimate_code_bg_register"
            android:orientation="horizontal">

            <bwie.com.jingdong.widget.CustomEditText
                android:id="@+id/et_phoneCodes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:textCursorDrawable="@drawable/et_cursor_color_size"
                />
            <!--<EditText
                android:id="@+id/et_phoneCodes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入右侧验证码"/>

            <ImageView
                android:id="@+id/img_clear_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/a9y"
                android:visibility="invisible"
                />-->
        </LinearLayout>

        <Button
            android:id="@+id/btn_reset_code"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:text="正在发送(119)"
            android:textColor="#fff"/>

    </LinearLayout>

    <Button
        android:id="@+id/bin_next_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:enabled="false"
        android:text="下一步"
        android:textColor="#fff"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遇到问题?您可以"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="联系客服"
            />
    </LinearLayout>
</LinearLayout>